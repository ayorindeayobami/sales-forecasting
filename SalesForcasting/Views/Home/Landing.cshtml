@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sales Forecasting System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap & AOS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            scroll-behavior: smooth;
            background-color: #f4f6f9;
            color: #333;
        }

        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.65)), url('/images/forecast-bg.jpg') no-repeat center center / cover;
            color: #fff;
            padding: 140px 20px;
            text-align: center;
        }

            .hero h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .hero p {
                font-size: 1.3rem;
                margin-bottom: 30px;
                color: #ddd;
            }

        .feature-card {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            border: none;
            border-radius: 16px;
        }

            .feature-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }

            .feature-card h4 {
                font-weight: 600;
                margin-bottom: 0.75rem;
            }

            .feature-card p {
                color: #666;
            }

        .cta-section {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 60px 0;
        }

            .cta-section .btn-light {
                color: #0056b3;
                font-weight: 600;
                padding: 12px 30px;
            }

        footer {
            background-color: #111;
            color: #aaa;
            padding: 30px 0;
            font-size: 0.95rem;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1 class="fw-bold">Sales Forecasting System</h1>
            <p class="lead">Empowering your business with smart, predictive insights</p>
            <a href="/Forecast/Index" class="btn btn-outline-light btn-lg">View Forecast</a>
        </div>
    </section>

    <!-- Features -->
    <section class="py-5 bg-white" id="features">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Why Choose Us?</h2>
                <p class="text-muted">Smart forecasting tools designed for real-world business growth</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4" data-aos="zoom-in">
                    <div class="card feature-card text-center p-4 shadow-sm h-100">
                        <div class="mb-3">
                            <i class="bi bi-cpu fs-1 text-primary"></i>
                        </div>
                        <h4>AI-Powered</h4>
                        <p>Leverage machine learning to make accurate sales forecasts based on your past trends.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                    <div class="card feature-card text-center p-4 shadow-sm h-100">
                        <div class="mb-3">
                            <i class="bi bi-bar-chart-line fs-1 text-success"></i>
                        </div>
                        <h4>Data Visualization</h4>
                        <p>Interactive dashboards and charts help visualize data and trends effortlessly.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="zoom-in" data-aos-delay="400">
                    <div class="card feature-card text-center p-4 shadow-sm h-100">
                        <div class="mb-3">
                            <i class="bi bi-speedometer2 fs-1 text-danger"></i>
                        </div>
                        <h4>Fast & Intuitive</h4>
                        <p>Simple, clean, and modern interface built for ease of use and productivity.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section text-center">
        <div class="container">
            <h3 class="mb-4">Ready to forecast your sales like a pro?</h3>
            <a asp-action="Forecast" asp-controller="Sales" class="btn btn-light btn-lg">Start Forecasting</a>

        </div>
    </section>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">© @DateTime.Now.Year Sales Forecasting System. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

    <!-- Optional: Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
